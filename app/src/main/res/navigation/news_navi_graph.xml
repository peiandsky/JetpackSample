<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/news_navi_graph"
            app:startDestination="@+id/newslist">
    <fragment android:id="@+id/newslist"
              android:name="com.zlcdgroup.jetpacksample.ui.index.news.NewsListFragment"
              android:label="@string/news_title">
        <action android:id="@+id/action_newslist_to_newsDetailFragment"
                app:destination="@id/newsDetailFragment"
                app:enterAnim="@anim/popup_enter"
                app:exitAnim="@anim/popup_exit"
                app:popUpTo="@id/newsDetailFragment"
                app:launchSingleTop="true"/>
    </fragment>
    <fragment android:id="@+id/newsDetailFragment"
              android:name="com.zlcdgroup.jetpacksample.ui.index.news.NewsDetailFragment"
              android:label="NewsDetailFragment">
        <argument app:argType="string" android:name="newsUrl"/>
    </fragment>

</navigation>